<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag asset_path('whisher_logo.svg') %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Services", services_path, class: "nav-link navbar-text-color" %>
        </li>
        <li class="nav-item">
          <%= link_to "About Us", about_us_path, class: "nav-link navbar-text-color" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Lists", lists_path, class: "nav-link navbar-text-color" %>
        </li>
        <li class="nav-item">
          <%= link_to "New List", new_list_path, class: "nav-link navbar-text-color" %>
        </li>
        <% if current_user.photo.attached? %>
          <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag asset_url("https://as1.ftcdn.net/v2/jpg/03/46/83/96/1000_F_346839683_6nAPzbhpSkIpb8pmAwufkC7c5eD7wYws.jpg"), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item navbar-text-color" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Services", "#", class: "nav-link navbar-text-color" %>
        </li>
        <li class="nav-item">
          <%= link_to "About Us", "#", class: "nav-link navbar-text-color" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link navbar-text-color" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
