<% if current_user.lists.count == 1 && @products.empty? %>
  <div class="main-container-show-lists">
    <div class="left-container-show-lists">
      <h1>Welcome to Whisher!</h1>
      <%= link_to 'Add a Product to Your List', new_user_registration_path, class:"btn btn-ghost mt-5" %>
    </div>
    <div class="right-container-show-lists">
    </div>
  </div>
<% end %>

<div class="wrapper">
  <h1><%= @list.title %></h1>
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <% @products.each do |product| %>
        <div class="card card-products">
          <% if product.photo.present? %>
            <%= image_tag asset_url(product.photo), class:"img-fluid" %>
          <% else %>
            <%= image_tag asset_url("https://static.scientificamerican.com/sciam/cache/file/1DDFE633-2B85-468D-B28D05ADAE7D1AD8_source.jpg?w=590&h=800&D80F3D79-4382-49FA-BE4B4D0C62A5C3ED"), class:"img-fluid" %>
          <% end %>
          <div class="card-body card-body-products">
            <h5 class="card-title"><%= product.name.present? ? product.name : "Loading..." %></h5>
            <h6 class="card-inventory"><%= product.inventory.present? ? product.inventory : "Loading..." %></h6>
            <h6 class="card-price"><%= product.price.present? ? product.price : "Loading..." %></h6>
          </div>
        </div>
        <div class="btn btn-products w-100">
          <a href="#">BUY</a>
        </div>
      <% end %>
      <div>
        <%= link_to 'Edit', edit_list_path, class:'btn btn-products w-100 mt-3' %>
        <%= link_to 'Delete', list_path, method: :delete, class:'btn btn-products w-100 mt-3' %>
      </div>
    </div>


    </div>
  </div>
</div>
