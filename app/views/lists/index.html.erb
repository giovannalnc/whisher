<div class="wrapper">
  <h1>WHISHER LISTS</h1>
  <div class="d-flex justify-content-end w-75 mr-2">
    <%= link_to "+ New List", new_list_path, class: "slide-left-right new-list" %>
  </div>
  <div class="row justify-content-center">
    <% @lists.each do |list| %>
      <%# <div class="col-10 col-md-4"> %>
        <%= link_to list_path(list) do %>
          <div class="card card-index-list m-3" style="width: 16rem; height: 22rem;">
            <%= list.photo.attached? ? (cl_image_tag list.photo.key, class: "card-img-top") : (image_tag asset_path("default-list-img.svg"), class: "card-img-top") %>
            <div class="card-body card-body-list">
              <%= render 'list_info', list: list  %>
            </div>
          </div>
        <% end %>
      <%# </div> %>
    <% end %>
  </div>
</div>
