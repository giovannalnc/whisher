<div class="wrapper">
  <h1>WHISHER LISTS</h1>
  <div class="d-flex justify-content-end w-75 mr-2">
    <%= link_to "+ New List", new_list_path, class: "slide-left-right new-list" %>
  </div>
  <div class="row d-flex justify-content-center">
    <% @lists.each do |list| %>
      <div class="col-10 col-md-3">
        <%= link_to list_path(list) do %>
          <div class="card card-index-list">
            <%= cl_image_tag list.photo.key, height: 250, width: 250, crop: :fill if list.photo.attached? %>
            <div class="card-body-index-list">
              <%= link_to list.title.capitalize, list_path(list), class:"slide-left-right my-5" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%# <%= link_to "New List", new_list_path, class: 'btn btn-ghost mt-4' %>
</div>
