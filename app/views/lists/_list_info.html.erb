<div class="list-title" data-controller="edit-list" data-edit-list-target="info">
  <h3 class="mt-4 card-list-content text-center"  data-edit-list-target="title"><%= link_to list.title.capitalize, list_path(list), class:"slide-left-right"%>
    <a href="#collapseExample" data-toggle="collapse">
      <i class="far fa-edit list-fa ml-1 <%= 'd-none' if list.errors.any? %>" data-action="click->edit-list#displayForm"></i>
    </a>
  </h3>

  <%= simple_form_for list, remote: true, html: { class: list.errors.any? ? ' ' : 'd-none', data: { edit_list_target: 'form', action: 'submit->edit-list#update' } } do |f| %>
    <div class="row d-flex justify-content-center py-4 collapse " id="collapseExample">
      <div class="col-10 ">
        <%= f.input :title, label: false, placeholder: 'My Books', input_html: { data: { edit_list_target: 'input', action: 'input->edit-list#check' } } %>
      </div>
      <div class="col-10 text-center">
        <%= f.input :photo, input_html: { class: 'd-none'}, label_html: { class: 'upload-photo mt-2'}, label: 'ðŸ“· Upload a photo'  %>
      </div>
      <div class="col-10 text-center">
        <%= f.button :submit, class:'btn btn-primary', data: { edit_list_target: 'submit'} %>
      </div>
    </div>
  <% end %>
</div>
